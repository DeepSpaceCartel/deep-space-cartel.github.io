---
import Layout from "../layouts/Layout.astro";
import Naviation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro"

const quote =
	"He would neither go towards the feeding grounds at the edge of the ice nor return to the colony";
---

<Layout title="Deep Space Cartel">
	<section class="relative h-screen w-full overflow-hidden">
		<div
			class="absolute inset-0 bg-cover bg-center bg-fixed"
			style="background-image: url('/images/hero.png');"
		>
		</div>

		<!-- Dark overlay -->
		<div class="absolute inset-0 bg-black/40"></div>

		<Naviation />
		<Hero quote={quote} />
		<Footer />
	</section>
</Layout>
