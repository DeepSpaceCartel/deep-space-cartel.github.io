---
const { quote } = Astro.props
---

<div class="relative z-10 grid h-full grid-rows-6 grid-cols-3 px-6">
  <!-- Quote centered in row 2, full width -->
  <div class="flex items-center justify-center row-start-1 row-span-2 col-span-3">
    <h1 class="fade-up uppercase max-w-6xl text-center font-body text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight">
      {quote}
    </h1>
  </div>

  <!-- Spotify iframe in row 5, right 1/3 -->
  <div class="flex items-center justify-end row-start-5 col-start-3">
    <iframe
      class="min-w-[320px] min-h-[150px]"
      data-testid="embed-iframe"
      style="border-radius:12px"
      src="https://open.spotify.com/embed/track/4JtOhAQTMtxFDDt7oY7RAA?utm_source=generator&theme=0"
      width="100%"
      height="152"
      frameBorder="0"
      allowfullscreen
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    ></iframe>
  </div>
</div>
